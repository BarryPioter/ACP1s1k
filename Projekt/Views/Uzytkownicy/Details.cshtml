@model Projekt.Models.Uzytkownik

@{
    ViewBag.Title = "Informacje o użytkowniku";
}

    <h2>Informacje o użytkowniku</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nick)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nick)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Serwery)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Nazwa Serwera</th>
                    <th>IP</th>
                    <th>Port</th>
                </tr>
                @foreach (var item in Model.Serwery)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.NazwaSerwera, "../Serwery/Details", new { id = item.ID })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Port)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
