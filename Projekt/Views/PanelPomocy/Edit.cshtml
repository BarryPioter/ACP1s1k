@model Projekt.Models.PanelPomoc

@{
    ViewBag.Title = "Edycja zgłoszenia";
}

    <h2>Edycja zgłoszenia</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.UzytkownikNazwa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UzytkownikNazwa, new { htmlAttributes = new { @class = "form-control" , @ReadOnly = "true" } })
                @Html.ValidationMessageFor(model => model.UzytkownikNazwa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OpisProblemu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OpisProblemu, new { htmlAttributes = new { @class = "form-control", @ReadOnly = "true" } })
                @Html.ValidationMessageFor(model => model.OpisProblemu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AktualnyStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.AktualnyStatus, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AktualnyStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
