@model Projekt.Models.PanelPomoc

@{
    ViewBag.Title = "Utwórz zgłoszenie";
}

    <h2>Utwórz zgłoszenie</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<input type="number" hidden value="@(ViewBag.SerwerID)" name="SerwerID" id="SerwerID"/>

	<div class="form-group">
		@Html.LabelFor(model => model.UzytkownikNazwa, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.UzytkownikNazwa, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.UzytkownikNazwa, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.OpisProblemu, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.OpisProblemu, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.OpisProblemu, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Typ, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EnumDropDownListFor(model => model.Typ, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.Typ, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Create" class="btn btn-default" />
		</div>
	</div>
</div>
}

<div>
    <!--@Html.ActionLink("Back to List", "Index")-->
    <a href="/Serwery/Index">
        <button class="btn btn-warning">
            Wróć do listy
        </button>
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
